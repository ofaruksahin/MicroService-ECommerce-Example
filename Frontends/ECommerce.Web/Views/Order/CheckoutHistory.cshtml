@model List<ECommerce.Web.Models.Orders.OrderViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ödeme Geçmişim</h5>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                        <th>Sipariş (Ödeme) No</th>
                        <th>Satın Alma Tarihi</th>
                        <th>Detaylar</th>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CreatedTime.ToShortDateString()</td>
                                    <td>
                                        <table class="table table-striped">
                                            <thead>
                                            <th>Kurs ismi</th>
                                            <th>Kurs fiyat</th>
                                            </thead>
                                            <tbody>
                                                @foreach (var itemDetail in item.OrderItems)
                                                {
                                                    <tr>
                                                        <td>@itemDetail.ProductName</td>
                                                        <td>@itemDetail.Price</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Satın aldığınız herhangi bir ürün bulunmamaktadır.</div>
                }

            </div>
        </div>
    </div>
</div>