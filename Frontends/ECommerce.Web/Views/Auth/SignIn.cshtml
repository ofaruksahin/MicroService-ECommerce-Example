@{
    ViewData["Title"] = "SignIn";
}
@model ECommerce.Web.Models.SignInInput

<div class="row">
    <div class="col-md-4 offset-4">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Üye girişi</h5>
                <div asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="SignIn" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="IsRemember">
                        <label class="form-check-label" asp-for="IsRemember"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş yap</button>
                </form>
            </div>
        </div>
    </div>
</div>
