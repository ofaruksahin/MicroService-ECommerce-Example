@{
}
@model List<ECommerce.Web.Models.Catalogs.CourseViewModel>

<h2>Kurslar</h2>
<hr />
@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <img src="@item.StockPictureUrl" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <h4 class="text-primary">@item.Price TL</h4>
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
}